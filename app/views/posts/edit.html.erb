<h1>Edit Post</h1>

<div class='row'>
  <div class='col-md-6 col-md-offset-3 test'>
    <%= form_for(@post) do |f|%>
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
      
      <%= f.label :text %>
      <%= f.text_area(:text, size: '30x10', class: 'form-control')%>

      <%= f.submit 'Update Post', class: 'btn btn-primary' %>
    <% end %>    
  </div> 
</div>