<h1>Posts</h1>
<%= link_to 'New Post', new_post_path, class: "btn btn-primary"%>

<% if @posts.present? %>
<ul>
  <% @posts.each do |post|%>
    <li> <%= post.title%> 
      <%= link_to 'Show Post', post_path(post), class: "btn btn-info"%>
      <%= link_to 'Edit Post', edit_post_path(post), class: "btn btn-success"%>
      <%= link_to 'Delete Post', post_path(post), method: :delete, data: { confirm: 'Are u sure?' }, class: "btn btn-danger"  %>
    </li>
  <% end %>
</ul>
<% else %>
  <h3>No Posts</h3>
<% end %>