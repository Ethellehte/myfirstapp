<% if @post.errors.any? %>
  <div id="error explanation">
    <div class="alert alert-explanation">
      The form constaint <%= pluralize(@post.errors.count, "error") %>
    </div>
    <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li> <%= message %> </li>
      <% end %>
    </ul>
  </div>
<% end %>